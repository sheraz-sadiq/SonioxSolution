<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_gravity="left"
android:padding="8dp"
    android:layout_marginEnd="40dp"
android:background="@android:color/transparent">


    <!-- Mic button container with fixed size -->
    <LinearLayout
        android:id="@+id/micButtonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="5dp"
        android:background="@drawable/rounded_white_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btnStartSpeechLeft"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:background="@drawable/green_record_mic"/>



        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/btnStopSpeechLeft"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:lottie_autoPlay="false"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/mic_listening" />

    </LinearLayout>



    <!-- Text container with max width to prevent pushing button off screen -->
    <LinearLayout
        android:id="@+id/receivedContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/micButtonContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1">


        <TextView
            android:id="@+id/actualText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actual text"
            android:layout_gravity="left"
            android:gravity="left"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:maxLines="10"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/translatedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Translated text"
            android:layout_gravity="left"
            android:gravity="left"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:maxLines="10"
            android:ellipsize="end" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
